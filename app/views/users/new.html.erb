<div class="signup-container">
  <h1>Create Your Account</h1>
  <%= form_with(model: @user, local: true, html: { class: 'signup-form' }) do |f| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@user.errors.count, "error") %> prevented this account from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "First Name", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "Last Name", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Email", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password (min 8 characters)", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true %>
    </div>
    <div class="form-actions">
      <%= f.submit "Create Account", class: "btn-signin" %>
    </div>
  <% end %>
</div>

<style>
  .signup-container {
    max-width: 500px;
    margin: 100px auto;
    padding: 40px;
    background: #111;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    text-align: center;
  }
  .signup-container h1 {
    margin-bottom: 20px;
    font-size: 2rem;
  }
  .signup-form .form-group {
    margin-bottom: 15px;
    text-align: left;
  }
  .signup-form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .signup-form input[type="text"],
  .signup-form input[type="email"],
  .signup-form input[type="password"] {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
  }
  .signup-form input[type="text"]:focus,
  .signup-form input[type="email"]:focus,
  .signup-form input[type="password"]:focus {
    outline: none;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
  }
  .signup-form .form-actions {
    margin-top: 20px;
  }
  .signup-form .btn-signin {
    padding: 10px 20px;
    font-size: 1.1rem;
    border: none;
    border-radius: 5px;
    background: #fff;
    color: #000;
    cursor: pointer;
    transition: background 0.3s ease;
  }
  .signup-form .btn-signin:hover {
    background: #ccc;
  }
  .error-messages {
    background: #ff4d4d;
    color: #fff;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
  }
</style>