<div class="password-reset-container">
  <h1>Reset Your Password</h1>
  <%= form_with url: password_resets_path, local: true do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email" %>
    </div>
    <div class="actions">
      <%= f.submit "Send Reset Instructions" %>
    </div>
  <% end %>
</div>

<style>
  .password-reset-container {
    max-width: 400px;
    margin: 100px auto;
    padding: 40px;
    background: #111;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    text-align: center;
  }
  .password-reset-container h1 {
    margin-bottom: 20px;
    font-size: 2rem;
  }
  .password-reset-container .field {
    margin-bottom: 15px;
    text-align: left;
  }
  .password-reset-container label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .password-reset-container input[type="email"] {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
  }
  .password-reset-container .actions {
    margin-top: 20px;
  }
</style>