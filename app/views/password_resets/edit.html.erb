<div class="password-reset-container">
  <h1>Reset Password</h1>
  <%= form_with model: @user, url: password_reset_path(@user.reset_password_token), local: true, method: :patch do |f| %>
    <div class="field">
      <%= f.label :password, "New Password:" %>
      <%= f.password_field :password, placeholder: "New Password", required: true %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirm New Password:" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", required: true %>
    </div>
    <div class="actions">
      <%= f.submit "Reset Password" %>
    </div>
  <% end %>
</div>

<style>
  .password-reset-container {
    max-width: 400px;
    margin: 100px auto;
    padding: 40px;
    background: #111;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    text-align: center;
  }
  .password-reset-container h1 {
    margin-bottom: 20px;
    font-size: 2rem;
  }
  .password-reset-container .field {
    margin-bottom: 15px;
    text-align: left;
  }
  .password-reset-container label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .password-reset-container input[type="password"] {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
  }
  .password-reset-container .actions {
    margin-top: 20px;
  }
</style>