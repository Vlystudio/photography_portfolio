<div class="signin-container">
  <h1>Sign In</h1>
  <%= form_with url: sessions_path, local: true, html: { class: 'signin-form' } do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, required: true, id: "usernameField" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, required: true, id: "passwordField" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Sign In", class: "btn-signin" %>
    </div>
  <% end %>

  <div class="extra-options">
    <%= link_to "Forgot my password", new_password_reset_path %>
    <span class="separator">|</span>
    <%= link_to "Forgot my username", forgot_username_path %>
    <span class="separator">|</span>
    <%= link_to "Register for new account", new_user_path %>
  </div>
</div>

<style>
  .signin-container {
    max-width: 400px;
    margin: 100px auto;
    padding: 40px;
    background: #111;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    text-align: center;
  }
  .signin-container h1 {
    margin-bottom: 20px;
    font-size: 2rem;
  }
  .signin-form .form-group {
    margin-bottom: 15px;
    text-align: left;
  }
  .signin-form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .signin-form input[type="text"],
  .signin-form input[type="password"] {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
  }
  .signin-form input:focus {
    outline: none;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
  }
  .form-actions {
    margin-top: 20px;
  }
  .btn-signin {
    padding: 10px 20px;
    font-size: 1.1rem;
    border: none;
    border-radius: 5px;
    background: #fff;
    color: #000;
    cursor: pointer;
    transition: background 0.3s ease;
  }
  .btn-signin:hover {
    background: #ccc;
  }
  .extra-options {
    margin-top: 20px;
    font-size: 0.9rem;
  }
  .extra-options a {
    color: #fff;
    text-decoration: none;
    margin: 0 5px;
  }
  .extra-options a:hover {
    text-decoration: underline;
  }
  .separator {
    color: #777;
  }
</style>